@{
    ViewBag.Title = "TestChatApp";
}

<div style="width:450px" ng-controller="chatCtrl">
 
    <div class="panel panel-info" style="margin-top:30px; margin-left:20px">
        <div class="panel-heading">
            <div class="row">
                <div class="col-lg-10"><h3 class="panel-title">Chat Here</h3></div>
            </div>
        </div>

        <div class="panel-body">
            <div class="scrollable">
                <div ng-repeat="msg in messages">{{msg.message}}</div>
            </div>
            <div>
                <input ng-show="nameSet" ng-model="newMessage" class="form-control input-sm pull-left" style="width:80%" type="text" placeholder="chat message" />
                <button ng-show="nameSet" ng-click="sendMessage()" class="pull-right btn btn-primary btn-sm">Send</button>
                <input ng-hide="nameSet" ng-model="name" class="form-control input-sm pull-left" style="width:80%" type="text" placeholder="your name" />
                <button ng-hide="nameSet" ng-click="setName()" class="pull-right btn btn-primary btn-sm">Set</button>
            </div>

        </div>
    </div>
</div>
